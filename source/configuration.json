{
    "save_interval": 5,
    "actual_games_size": 20,
    "game_board_size": 4,
    "search_games_size": 200,
    "mini_batch_size": 32,
    "epochs": 20,
    "criterion": "cross_entropy_loss",
    "optimizer": {
        "type": "adam",
        "lr": 0.001
    },
    "input_layer": {
        "filters": 64,
        "kernel_size": 3,
        "stride": 1,
        "padding": 1,
        "bias": true
    },
    "hidden_layers": [
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 64,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 128,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 128,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 256,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 256,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "flatten"
            },

            {
                "type": "linear",
                "filters": 512,
                "bias": true
            },
            {
                "type": "relu"
            }
        ]
}
