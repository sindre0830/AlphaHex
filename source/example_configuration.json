{
    "save_interval": 5,
    "save_visualization_interval": 1,
    "actual_games_size": 5,
    "grid_size": 5,
    "search_games_time_limit_seconds": 2,
    "mini_batch_size": 32,
    "minimum_epoch_improvement": 10,
    "features": [
        {
            "type": "onehot_encode_player"
        },
        {
            "type": "onehot_encode_opponent"
        },
        {
            "type": "onehot_encode_empty"
        },
        {
            "type": "constant_plane",
            "value": 1
        },
        {
            "type": "winning_edges"
        },
        {
            "type": "bridge_templates"
        },
        {
            "type": "critical_bridge_connections"
        },
        {
            "type": "block"
        },
        {
            "type": "constant_plane",
            "value": 0
        }
    ],
    "optimizer": {
        "type": "adam",
        "lr": 0.001
    },
    "input_layer": {
        "filters": 16,
        "kernel_size": 3,
        "stride": 1,
        "padding": 1,
        "bias": true
    },
    "hidden_layers": [
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 16,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 32,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 32,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 64,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "conv",
                "filters": 64,
                "kernel_size": 3,
                "stride": 1,
                "padding": 1,
                "bias": true
            },
            {
                "type": "batch_norm_2d"
            },
            {
                "type": "relu"
            },

            {
                "type": "flatten"
            },

            {
                "type": "linear",
                "filters": 128,
                "bias": true
            },
            {
                "type": "relu"
            }
        ]
}
